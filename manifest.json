{
  "manifest_version": 3,
  "name": "Google Search Language",
  "version": "0.1",
  "description": "Add custom buttons to Google search results to show results of particular languages",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["handler.js"],
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.co.uk/search*",
        "*://www.google.com.tw/search*",
        "*://www.google.co.in/search*",
        "*://www.google.com.au/search*",
        "*://www.google.ca/search*",
        "*://www.google.co.jp/search*",
        "*://www.google.com.br/search*",
        "*://www.google.de/search*",
        "*://www.google.fr/search*",
        "*://www.google.it/search*",
        "*://www.google.es/search*",
        "*://www.google.co.kr/search*",
        "*://www.google.ru/search*",
        "*://www.google.com.hk/search*",
        "*://www.google.com.sg/search*",
        "*://www.google.com.mx/search*",
        "*://www.google.com.my/search*",
        "*://www.google.nl/search*",
        "*://www.google.co.za/search*"
      ]
    }
  ],
  "action": {
    "default_popup": "preference.html",
    "default_icon": "logo_128.png"
  },
  "icons": {
    "16": "logo_16.png",
    "32": "logo_32.png",
    "48": "logo_48.png",
    "128": "logo_128.png"
   }
}
